#!/bin/bash

#set -x
if [ "$#" -ne 1 ]
then
  echo "Usage: gitBatchCmdGenIfChanged <command>"
  exit 1
fi

for i in */; do
  if [ -e "$i/.git" ]; then
    dir=$(basename $i)    
    echo "pushd ${dir} > /dev/null; git status | grep 'nothing to commit' > /dev/null; changesStatus=\$?; if [ \"\${changesStatus}\" -ne 0 ]; then ${1}; fi; popd > /dev/null"
  fi
done
